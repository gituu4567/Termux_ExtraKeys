#!/bin/bash
clear
nombre="F@br1xÂ and ä½ å¥½ðŸ˜œ"
echo -e "\e[1;36m  Extrakeys Termux\e[0;m"
sleep 2
echo -e "   Created by: \e[1;36mF@br1xÂ and ä½ å¥½ðŸ˜œ\e[0;m"
